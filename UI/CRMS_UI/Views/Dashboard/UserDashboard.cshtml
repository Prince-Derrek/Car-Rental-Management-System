@model CRMS_UI.ViewModels.Dashboard.UserDashboardViewModel

@{
        Layout = "_Layout";
    ViewData["Title"] = "User Dashboard";

        var userName = Context.Session.GetString("UserName") ?? "Renter";
}

<div class="py-8">
    <h1 class="text-3xl font-extrabold text-gray-900">Welcome, @userName</h1>
    <p class="mt-2 text-lg text-gray-600">Your hub for finding and managing peer-to-peer car rentals.</p>

    
    <div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">

        
        <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-green-200">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-green-500 rounded-full p-3 text-white">
                        <i class="fa-solid fa-car-on text-xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Cars Available Now</dt>
                            <dd>
                                <div class="text-3xl font-extrabold text-gray-900">@Model.AvailableCarsCount</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3 text-sm">
                <a asp-controller="Cars" asp-action="Index" class="font-medium text-green-600 hover:text-green-500">Start a New Rental <i class="fa-solid fa-arrow-right-long ml-1"></i></a>
            </div>
        </div>

        
        <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-indigo-200">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-indigo-500 rounded-full p-3 text-white">
                        <i class="fa-solid fa-map-location-dot text-xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Active Bookings</dt>
                            <dd>
                                <div class="text-3xl font-extrabold text-gray-900">@Model.ActiveBookingsCount</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3 text-sm">
                <a asp-controller="Rentals" asp-action="History" class="font-medium text-indigo-600 hover:text-indigo-500">View Details <i class="fa-solid fa-arrow-right-long ml-1"></i></a>
            </div>
        </div>

        
        <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-yellow-200">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-yellow-500 rounded-full p-3 text-white">
                        <i class="fa-solid fa-hourglass-half text-xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Awaiting Approval</dt>
                            <dd>
                                <div class="text-3xl font-extrabold text-gray-900">@Model.PendingApprovalsCount</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3 text-sm">
                <a asp-controller="Rentals" asp-action="History" class="font-medium text-yellow-600 hover:text-yellow-500">Check Status <i class="fa-solid fa-arrow-right-long ml-1"></i></a>
            </div>
        </div>
    </div>

    
    <div class="mt-10 bg-white shadow-lg rounded-xl p-6">
        <h2 class="text-xl font-bold text-gray-900 border-b pb-3 mb-4">Rental Quick Links</h2>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <a asp-controller="Cars" asp-action="Index" class="flex items-center justify-center p-4 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition duration-150 shadow-sm">
                <i class="fa-solid fa-magnifying-glass mr-2 text-lg text-indigo-500"></i>
                <span class="font-medium">Browse All Available Cars</span>
            </a>
            <a asp-controller="Rentals" asp-action="History" class="flex items-center justify-center p-4 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition duration-150 shadow-sm">
                <i class="fa-solid fa-calendar-check mr-2 text-lg text-teal-500"></i>
                <span class="font-medium">View Past and Future Bookings</span>
            </a>
        </div>
    </div>
</div>
