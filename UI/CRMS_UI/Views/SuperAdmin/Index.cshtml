@model CRMS_UI.ViewModels.Dashboard.SuperAdminDashboardViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Super Admin Dashboard";
}

<div class="py-8">
    <h1 class="text-3xl font-extrabold text-gray-900">Welcome, @Model.UserName (Super Admin)</h1>
    <p class="mt-2 text-lg text-gray-600">System-Wide Analytics Overview.</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative my-4" role="alert">
            <span class="block sm:inline">@TempData["SuccessMessage"]</span>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative my-4" role="alert">
            <span class="block sm:inline">@TempData["ErrorMessage"]</span>
        </div>
    }

    <div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">

        <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-blue-200">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-blue-500 rounded-full p-3 text-white">
                        <i class="fa-solid fa-users text-xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Total Users</dt>
                            <dd>
                                <div class="text-3xl font-extrabold text-gray-900">@Model.TotalUsers</div>
                                <div class="text-sm text-gray-500">(@Model.ActiveUsers Active)</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3 text-sm">
                <a asp-action="UserList" asp-controller="SuperAdmin" class="font-medium text-blue-600 hover:text-blue-500">Manage Users <i class="fa-solid fa-arrow-right-long ml-1"></i></a>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-green-200">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-green-500 rounded-full p-3 text-white">
                        <i class="fa-solid fa-car text-xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Total Vehicles</dt>
                            <dd>
                                <div class="text-3xl font-extrabold text-gray-900">@Model.TotalVehicles</div>
                                <div class="text-sm text-gray-500">(@Model.VehiclesAvailable Available)</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3 text-sm">
                <span class="text-gray-400">System Wide</span>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-indigo-200">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-indigo-500 rounded-full p-3 text-white">
                        <i class="fa-solid fa-calendar-check text-xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Total Bookings</dt>
                            <dd>
                                <div class="text-3xl font-extrabold text-gray-900">@Model.TotalBookings</div>
                                <div class="text-sm text-gray-500">(@Model.ActiveBookings Active / @Model.PendingBookings Pending)</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3 text-sm">
                <span class="text-gray-400">System Wide</span>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-yellow-200">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-yellow-500 rounded-full p-3 text-white">
                        <i class="fa-solid fa-sack-dollar text-xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Total Revenue (Completed)</dt>
                            <dd>
                                <div class="text-3xl font-extrabold text-gray-900">Ksh @Model.TotalRevenue.ToString("N0")</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3 text-sm">
                <span class="text-gray-400">Based on Completed Bookings</span>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-purple-200">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-purple-500 rounded-full p-3 text-white">
                        <i class="fa-solid fa-medal text-xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Most Booked Model</dt>
                            <dd>
                                <div class="text-2xl font-bold text-gray-900">@Model.MostBookedModel</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3 text-sm">
                <span class="text-gray-400">Based on Completed Bookings</span>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-pink-200">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-pink-500 rounded-full p-3 text-white">
                        <i class="fa-solid fa-crown text-xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Owner with Most Bookings</dt>
                            <dd>
                                <div class="text-2xl font-bold text-gray-900">@Model.OwnerWithMostBookings</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3 text-sm">
                <span class="text-gray-400">Based on Completed Bookings</span>
            </div>
        </div>

    </div><div class="mt-10 bg-white shadow-lg rounded-xl p-6">
        <h2 class="text-xl font-bold text-gray-900 border-b pb-3 mb-4">Management Actions</h2>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
            <a asp-action="UserList" asp-controller="SuperAdmin" class="flex items-center justify-center p-4 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition duration-150 shadow-sm">
                <i class="fa-solid fa-users-gear mr-2 text-lg text-blue-500"></i>
                <span class="font-medium">Manage Users</span>
            </a>
            <span class="flex items-center justify-center p-4 border border-gray-200 rounded-lg text-gray-400 bg-gray-50">
                (Future Actions Placeholder)
            </span>
            <span class="flex items-center justify-center p-4 border border-gray-200 rounded-lg text-gray-400 bg-gray-50">
                (Future Actions Placeholder)
            </span>
        </div>
    </div>

</div>