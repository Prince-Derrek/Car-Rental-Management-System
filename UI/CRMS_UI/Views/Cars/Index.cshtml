@model List<CRMS_UI.ViewModels.Cars.CarViewModel>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Our Fleet";
    var userRole = Context.Session.GetString("UserRole");
    var isOwner = userRole == "Owner";
}

<div class="py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-extrabold text-gray-900">@ViewData["Title"]</h1>
        @if (isOwner)
        {
            <!-- Owner: Link to Add New Car -->
            <a asp-controller="Cars" asp-action="Create" class="flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 shadow-md transition duration-150">
                <i class="fa-solid fa-plus mr-2"></i> Add Vehicle
            </a>
        }
    </div>

    <!-- Display Feedback Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">@TempData["SuccessMessage"]</span>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">@TempData["ErrorMessage"]</span>
        </div>
    }

    <!-- Car List Table -->
    <div class="overflow-x-auto shadow-xl sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Plate</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Make/Model</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Year</th>
                    @if (isOwner)
                    {
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Owner</th>
                    }
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var car in Model)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@car.Plate</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@car.Make @car.Model</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@car.Year</td>
                        @if (isOwner)
                        {
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@car.OwnerName</td>
                        }
                        <td class="px-6 py-4 whitespace-nowrap">
                            @{
                                var badgeColor = car.IsAvailable ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800";
                            }
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @badgeColor">
                                @car.CurrentStatus
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            @if (isOwner)
                            {
                                <!-- Owner Actions (Edit & Delete) -->
                                <a asp-controller="Cars" asp-action="Edit" asp-route-id="@car.Id" class="text-indigo-600 hover:text-indigo-900 mr-4">Edit</a>

                                <!-- Delete Form (Using a small form post for security) -->
                                <form asp-controller="Cars" asp-action="Delete" asp-route-id="@car.Id" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this vehicle? This action cannot be undone.');">
                                    <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                                    @Html.AntiForgeryToken()
                                </form>
                            }
                            else
                            {
                                <!-- Renter Action (Rent) -->
                                <a asp-controller="Rentals" asp-action="Rent" asp-route-id="@car.Id" class="text-blue-600 hover:text-blue-900">Rent Now</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
