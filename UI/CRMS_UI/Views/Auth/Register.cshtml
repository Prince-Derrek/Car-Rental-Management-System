@model CRMS_UI.ViewModels.Auth.RegisterViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Account";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-xl shadow-2xl">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Create your new account
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                And join the peer-to-peer rental community
            </p>
        </div>

        <form class="mt-8 space-y-6" asp-controller="Auth" asp-action="Register" method="POST">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm text-center p-2 bg-red-50 rounded"></div>

            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label asp-for="Name" class="sr-only">Full Name</label>
                    <input asp-for="Name" type="text" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Full Name">
                    <span asp-validation-for="Name" class="text-red-600 text-xs"></span>
                </div>
                <div>
                    <label asp-for="Email" class="sr-only">Email address</label>
                    <input asp-for="Email" type="email" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email address">
                    <span asp-validation-for="Email" class="text-red-600 text-xs"></span>
                </div>
                <div>
                    <label asp-for="Password" class="sr-only">Password</label>
                    <input asp-for="Password" type="password" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Password (min. 8 characters)">
                    <span asp-validation-for="Password" class="text-red-600 text-xs"></span>
                </div>
                <div>
                    <label asp-for="ConfirmPassword" class="sr-only">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Confirm Password">
                    <span asp-validation-for="ConfirmPassword" class="text-red-600 text-xs"></span>
                </div>
            </div>

            <div>
                <label asp-for="Role" class="block text-sm font-medium text-gray-700 mb-1">Register as:</label>
                <select asp-for="Role" asp-items="Html.GetEnumSelectList<CRMS_UI.ViewModels.Auth.userRole>()" class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                </select>
            </div>

            <div>
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-lg transition duration-150 ease-in-out">
                    Register
                </button>
            </div>

            <div class="text-sm text-center">
                <a asp-action="Login" class="font-medium text-indigo-600 hover:text-indigo-500">
                    Already have an account? Sign in
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}